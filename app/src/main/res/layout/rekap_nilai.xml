<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RekapNilai">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tollbar1"
        app:titleTextColor="#FFFFFF"
        android:background="#E35555"
        app:title="Rekap Nilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Pilih Semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/semester1"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Semester 1"
            android:background="#FF5722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/semester2"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Semester 2"
            android:background="#FF5722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/semester3"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Semester 3"
            android:background="#FF5722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/semester4"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Semester 4"
            android:background="#FF5722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/semester5"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Semester 5"
            android:background="#FF5722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/semester6"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:text="Semester 6"
            android:background="#FF5722"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>